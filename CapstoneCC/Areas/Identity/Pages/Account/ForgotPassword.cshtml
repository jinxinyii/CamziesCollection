@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="forgot-password-container">
    <h2 class="text-center mb-3" style="color: #EC1EA4;">FORGOT PASSWORD</h2>
    <hr style="color: #EC1EA4; border: 1.5px solid;" />

    <p class="text-center" style="color: #555;">Enter your email address to receive a password reset link.</p>

    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <form asp-action="ForgotPassword" method="post" class="forgot-password-form">
        <div class="form-group mb-3">
            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn custom-btn">Reset Password</button>
            <a class="btn custom-btn" href="/Identity/Account/Login">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
