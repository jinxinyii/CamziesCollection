@page
@model LoginModel

@{
    if (User.Identity.IsAuthenticated)
    {
        Response.Redirect("/Home");
    }
    ViewData["Title"] = "Sign In";
}

<div class="row">
    <div class="col-md-4 mx-auto custom-container">
        <section>
            <h2 class="text-center mb-3" style="color: #EC1EA4;">SIGN IN</h2>
            <hr style="color: #EC1EA4; border: 1.5px solid;" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <form id="account" method="post">
                
                <div class="mb-3">
                    <label class="form-label">Username or Email</label>
                    <input asp-for="Input.Identifier" class="form-control" />
                    <span asp-validation-for="Input.Identifier" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="row mb-3">
                    <div class="col d-grid">
                        <button type="submit" class="btn btn-outline-primary">SIGN IN</button>
                    </div>
                    <div class="col d-grid">
                        <a class="btn btn-outline-primary" href="/" role="button">CANCEL</a>
                    </div>
                </div>
                <div>
                    <a class="forgotPassword" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </div>
            </form>
        </section>
    </div>
</div>